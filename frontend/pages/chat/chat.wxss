/* Main chat page container */
.chat-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  padding-bottom: 120rpx; /* Space for fixed input */
}

/* Scroll container - takes remaining space */
.chat-container {
  flex: 1;
  height: 0; /* Important: allows flex to work properly */
  background: #f5f5f5;
}

/* Header styles - FIXED AT TOP */
.chat-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  padding-top: calc(20rpx + env(safe-area-inset-top)); /* Handle iPhone notch */
  background: #1a3bc0;
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  height: 100rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 500;
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.clear-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  color: white;
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 8rpx;
  line-height: 1.5;
}

.clear-btn:active {
  background: rgba(255, 255, 255, 0.2);
}

/* Messages wrapper inside scroll container */
.messages-wrapper {
  padding: 20rpx;
  padding-bottom: 40rpx; /* Extra bottom padding for scroll space */
  min-height: 100%;
  display: flex;
  flex-direction: column;
}

/* Empty state */
.empty-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  gap: 20rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-placeholder text:first-child {
  font-size: 80rpx;
}

.start-chat-btn {
  margin-top: 30rpx;
  padding: 20rpx 40rpx;
  background: linear-gradient(135deg, #1a3bc0 0%, #0f2a80 100%);
  color: white;
  border: none;
  border-radius: 25rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(26, 59, 192, 0.3);
  transition: all 0.3s ease;
}

.start-chat-btn:active {
  transform: scale(0.95);
}

/* Lazy loading skeleton styles */
.skeleton-loader {
  padding: 20rpx 0;
  animation: skeleton-pulse 1.5s ease-in-out infinite;
}

.skeleton-message {
  height: 80rpx;
  border-radius: 20rpx;
  margin: 20rpx 0;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-shimmer 2s infinite;
}

.skeleton-user {
  width: 70%;
  margin-left: auto;
  margin-right: 20rpx;
  background-color: #e8f4ff;
}

.skeleton-assistant {
  width: 80%;
  margin-left: 20rpx;
  margin-right: auto;
  background-color: #f8f8f8;
}

@keyframes skeleton-shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

@keyframes skeleton-pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

/* Lazy loading component fade-in */
.lazy-component {
  animation: lazy-fade-in 0.5s ease-in-out;
}

@keyframes lazy-fade-in {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Image lazy loading styles */
.lazy-image {
  transition: opacity 0.3s ease;
}

.lazy-image[data-loaded="false"] {
  opacity: 0.3;
  background-color: #f0f0f0;
}

.lazy-image[data-loaded="true"] {
  opacity: 1;
}

/* Scroll anchor for auto-scroll */
.scroll-anchor {
  height: 20rpx;
  width: 100%;
}

/* Floating Menu Button - Chinese Mobile App Standard */
.floating-menu-btn {
  position: fixed;
  bottom: 200rpx;
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #1a3bc0 0%, #0f2a80 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1001;
  box-shadow: 0 8rpx 24rpx rgba(26, 59, 192, 0.4);
  transition: all 0.3s ease;
}

.floating-menu-btn:active {
  transform: scale(0.9);
  box-shadow: 0 4rpx 16rpx rgba(26, 59, 192, 0.6);
}

.floating-menu-btn:hover {
  transform: scale(1.05);
  box-shadow: 0 12rpx 32rpx rgba(26, 59, 192, 0.5);
}

.menu-icon {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

